{
  "name": "web-marker-server",
  "version": "0.0.0",
  "description": "Server for chrome extension",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "set NODE_ENV=development && ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:prod": "set NODE_ENV=production && npm run build && cp production.env dist/ && node dist/main.js",
    "deploy:prod": "npm run build && set NODE_ENV=production && node dist/main.js",
    "deploy:prod:linux": "npm run build && export NODE_ENV=production && pm2 start node dist/main.js --watch",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@crowdlinker/nestjs-mailer": "0.0.3",
    "@nestjs/common": "^6.6.7",
    "@nestjs/core": "^6.6.7",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/mongoose": "^6.1.2",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.6.7",
    "@nestjs/platform-socket.io": "^6.7.2",
    "@nestjs/platform-ws": "^6.7.2",
    "@nestjs/serve-static": "^1.0.1",
    "@nestjs/websockets": "^6.7.2",
    "bcrypt": "^3.0.6",
    "crypto-random-string": "^3.0.1",
    "dotenv": "^8.1.0",
    "jwt-decode": "^2.2.0",
    "mongoose": "^5.7.5",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.7.1",
    "rxjs": "^6.5.3",
    "socket.io-redis": "^5.2.0",
    "typescript": "^3.6.3",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.7.2",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/jest": "^23.3.14",
    "@types/mongoose": "^5.5.23",
    "@types/node": "^10.14.18",
    "@types/socket.io": "^2.1.2",
    "@types/supertest": "^2.0.8",
    "jest": "^23.5.0",
    "nodemon": "^1.19.2",
    "prettier": "^1.18.2",
    "supertest": "^3.4.2",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.5.0",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "5.11.0",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.8",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
